<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:background="@drawable/bg_safe_state"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:id="@+id/safe_desc"
            style="@style/Text.Title"
            android:layout_width="190dp"
            android:layout_height="90dp"
            android:fontFamily="@font/product_sans_bold"
            android:text="Kamu berada di daerah yang aman"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/icon_safe"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"/>

        <ImageView
            android:id="@+id/icon_safe"
            android:layout_width="119dp"
            android:layout_height="153dp"
            android:contentDescription="safe"
            android:src="@drawable/i_safe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:id="@+id/icon_loc"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="location"
            android:src="@drawable/icon_loc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            />


        <TextView
            android:id="@+id/safe_loc"
            style="@style/Text"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Jakarta Selatan"

            app:layout_constraintBottom_toBottomOf="@+id/icon_loc"
            app:layout_constraintStart_toEndOf="@id/icon_loc"
            app:layout_constraintTop_toTopOf="@+id/icon_loc" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
